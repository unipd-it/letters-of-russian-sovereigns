<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{{ ('controller.'~controller~'.'~method~'.title')|trans }}{% endblock %} – {{ 'page.label'|trans }}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('css/'~controller~'/'~method) }}
        {% endblock %}
    </head>

    <body>

        <nav class="navbar navbar-dark bg-dark flex-nowrap p-0 lors-header">
            <a class="navbar-brand col-12 lors-navbar-brand" href="{{ path('index') }}">{{ 'page.label'|trans }}</a>
        </nav>

        <div class="container-fluid">
            <div class="row">
                <div class="col-2 bg-light sidebar lors-sidebar">
                    {% block left_sidebar_content %}
                        {{ knp_menu_render('main', {'currentClass': 'lors-active'}) }}
                    {% endblock %}
                </div>

                <main role="main" class="col-8 lors-main">
                    <h1 class="border-bottom">{% block page_title %}{{ block('title') }}{% endblock %}</h1>
                    <div class="container pb-4">
                        {% block page_content %}{% endblock %}
                    </div>
                </main>

                <div class="col-2 bg-light sidebar lors-sidebar">
                    {% block right_sidebar_content %}{% endblock %}
                </div>
            </div>
        </div>

        <footer class="lors-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-10">
                        <span class="text-muted">
                            {{ 'page.footer'|trans }}
                        </span>
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}{% endblock %}
    </body>
</html>
